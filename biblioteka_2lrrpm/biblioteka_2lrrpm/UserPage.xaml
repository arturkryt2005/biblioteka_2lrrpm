<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="biblioteka_2lrrpm.UserPage"
             Title="Новый пользователь">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="LightFrameColor">#FFDEB887</Color>
            <Color x:Key="LightBackgroundColor">#FFDEB887</Color>
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout Padding="20">
        <Frame CornerRadius="10" BorderColor="{StaticResource LightFrameColor}" Padding="0" Margin="10" BackgroundColor="{StaticResource LightBackgroundColor}">
            <Entry x:Name="loginEntry" Text="{Binding Path=Login}" Placeholder="Логин" FontSize="16" HeightRequest="40"/>
        </Frame>
        <Frame CornerRadius="10" BorderColor="{StaticResource LightFrameColor}" Padding="0" Margin="10" BackgroundColor="{StaticResource LightBackgroundColor}">
            <Entry x:Name="passwordEntry" Text="{Binding Path=Password}" Placeholder="Пароль" FontSize="16" HeightRequest="40"/>
        </Frame>
        <Button CornerRadius="10" HorizontalOptions="Center" Text="Сохранить" FontSize="16" Clicked="Button_Clicked" BackgroundColor="#FF87" TextColor="White" Margin="10"/>
        
    </StackLayout>
</ContentPage>